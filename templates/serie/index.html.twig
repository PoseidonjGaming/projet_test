{% extends 'base.html.twig' %}

{% block title %}Sélection des séries{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em ; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row">
    {% set num = 0 %}
    
    {% for uneSerie in serie %}
        <div class="col md-4">
            <p></p>
            <div class="card md-4" style="width: 24rem;">
                <a class="card-img-top"  href="{{path('detail_serie',{'id': uneSerie.id})}}">
                    <img  src="photo/{{ uneSerie.affiche }}" alt="En savoir plus" width="383" height="500">
                </a>
                <div class="card-body">
                    <p>Nom: {{uneSerie.nom}}</p>
                    <p>Première diffusion le  {{uneSerie.dateDiff|date("d/m/Y")}}</p>
                    <p>Résumé: {{uneSerie.resume}}</p>
                </div>
                
            </div>
        </div>
        {% set num = num + 1 %}
    {% endfor %} 
    </div>
</div>
{% endblock %}
